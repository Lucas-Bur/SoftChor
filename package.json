{
  "name": "softchor",
  "private": true,
  "version": "1.0.0",
  "description": "SoftChor (Software fÃ¼r den Chor) - Monorepo with Turborepo",
  "packageManager": "pnpm@10.29.3",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:fix": "turbo run format:fix",
    "check": "turbo run check",
    "typecheck": "turbo run typecheck",
    "db:generate": "turbo run db:generate --filter @repo/database",
    "db:migrate": "turbo run db:migrate --filter @repo/database",
    "db:push": "turbo run db:push --filter @repo/database",
    "db:pull": "turbo run db:pull --filter @repo/database",
    "db:studio": "turbo run db:studio --filter @repo/database",
    "db:models": "turbo run generate:models --filter @repo/database",
    "services:up": "docker compose --env-file .env.local -f services/docker-compose.dev.yaml up",
    "services:down": "docker compose --env-file .env.local -f services/docker-compose.dev.yaml down"
  },
  "dependencies": {
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-jsx-a11y": "catalog:",
    "eslint-plugin-n": "catalog:",
    "eslint-plugin-react": "catalog:",
    "eslint-plugin-react-hooks": "catalog:",
    "eslint-plugin-simple-import-sort": "catalog:",
    "eslint-plugin-turbo": "catalog:",
    "prettier": "catalog:",
    "turbo": "^2.8.8",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "resolvePeersFromWorkspaceRoot": true
  }
}
