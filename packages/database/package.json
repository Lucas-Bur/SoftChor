{
  "name": "@repo/database",
  "version": "1.0.0",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./schema": "./src/schema/index.ts",
    "./client": "./src/client.ts",
    "./utils": "./src/utils.ts"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "format": "prettier --check \"src/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check": "npm run lint && npm run format",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "dotenv -e .env.local -- drizzle-kit migrate",
    "db:push": "dotenv -e .env.local -- drizzle-kit push",
    "db:pull": "dotenv -e .env.local -- drizzle-kit pull",
    "db:studio": "drizzle-kit studio",
    "generate:models": "tsx scripts/generate-models.ts"
  },
  "dependencies": {
    "@neondatabase/serverless": "catalog:",
    "@tanstack/electric-db-collection": "catalog:",
    "drizzle-orm": "catalog:",
    "drizzle-zod": "^0.8.3",
    "pg": "^8.16.3",
    "ws": "^8.18.3",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "@types/pg": "catalog:",
    "@types/ws": "catalog:",
    "drizzle-kit": "^0.31.8",
    "ts-morph": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  }
}
